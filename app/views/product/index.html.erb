<details>
  <summary>Shopping Cart</summary>
  <% if @cart.empty?%>
    <p>Your cart is empty. </p>
    <% else %>
    <ul>
      <% @cart.each do |product| %>
        <li><%= product.ProductName %></li>
        <%= link_to 'Remove From Cart', remove_from_cart_path(product), method: :delete%>
      <% end %>
    </ul>
    <% end %>
</details>

<% @products.each do |product| %>
<p><%= link_to product.ProductName, controller: "product", action: "show", id: product.id %> </p>

<p><%= image_tag(product.image, alt: "Image")%></p>
<% if @cart.include?(product)%>
  <p><%= button_to 'Remove From Cart', remove_from_cart_path(product), method: :delete%></p>
<% else %>
<p>Quantity - <%= number_field_tag 'quantity'%> </p>
<p><%= link_to 'Add To Cart', add_to_cart_path(product.id), method: :post %> </p>
<% end %>
<%= paginate @products %>
<% end %>